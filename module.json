{
    "autoload": true,
    "singleton": true,
    "dependencies": [],
    "category": "developers_stuff",
    "author": "Robert Gebauer",
    "moduleName": "HTTPBridge",
    "homepage" : "https://github.com/RobertGebauer/zway-http-bridge",
    "version": "0.0.1",
    "maturity": "stable",
    "icon" : "icon.png",
    "defaults": {
        "title": "HTTP Bridge",
        "description": "Publishes all 'change:metrics:level' events of chosen devices to a HTTP-Server using the method POST. This can be used to build bridges to other ecosystems.<br />For a more detailed description with examples please visit <a href='https://github.com/RobertGebauer/zway-http-bridge'>https://github.com/RobertGebauer/zway-http-bridge</a>.",
        "devicesToTrack": [],
        "url": ""
    },
    "options": {
        "fields": {
            "url": {
                "label": "URL to POST to",
                "helper" : "Complete URL with schema. Using HTTPS is strongly recommended."
            },
            "devicesToTrack": {
                "label": "Devices",
                "fields": {
                    "item": {
                        "type": "select",
                        "datasource": "namespaces",
                        "field": "optionLabels",
                        "optionLabels": "namespaces:devices_all:deviceName"
                    }
                }
            }
        }
    },
    "schema": {
        "properties": {
            "url": {
                "type": "string",
                "required": true
            },
            "devicesToTrack": {
                "type": "array",
                "items": {
                    "field": "enum",
                    "datasource": "namespaces",
                    "enum": "namespaces:devices_all:deviceId",
                    "required": true
                }
            }
        },
        "required": true,
        "type": "object"
    }
}